<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NotificacionApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NotificacionApp"
    xmlns:views="clr-namespace:NotificacionApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:Login}"
        Route="Login" />

    <ShellContent
        Title="Registro"
        ContentTemplate="{DataTemplate views:Registro}"
        Route="Registro" />

    <ShellContent
        Title="Pantalla Principal"
        ContentTemplate="{DataTemplate views:PantallaPrincipal}"
        Route="PantallaPrincipal" />

</Shell>
